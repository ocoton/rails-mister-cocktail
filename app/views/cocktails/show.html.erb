<h2> <%= @cocktail.name %> </h2>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <div class="card">
      <li class="list-group-item"><%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to "Delete",
              dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      </li>
    </div>
  <% end %>
</ul>



